<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>/jsp/entrance.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>EncodingSetFilter</filter-name>
        <filter-class>by.musicwaves.controller.filter.EncodingSetFilter</filter-class>
    </filter>

    <filter>
        <filter-name>JspToPlainPageNameFilter</filter-name>
        <filter-class>by.musicwaves.controller.filter.JspToPlainPageNameFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>PageAliasToRealJspFilter</filter-name>
        <filter-class>by.musicwaves.controller.filter.PageAliasToRealJspFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>


    <filter-mapping>
        <filter-name>JspToPlainPageNameFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>PageAliasToRealJspFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>StaticResourcesController</servlet-name>
        <servlet-class>by.musicwaves.controller.servlet.StaticResourcesController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StaticResourcesController</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadableResourcesController</servlet-name>
        <servlet-class>by.musicwaves.controller.servlet.UploadableResourcesController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UploadableResourcesController</servlet-name>
        <url-pattern>/music/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UploadableResourcesController</servlet-name>
        <url-pattern>/artist-images/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UploadableResourcesController</servlet-name>
        <url-pattern>/album-images/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AsyncRequestsController</servlet-name>
        <servlet-class>by.musicwaves.controller.servlet.XHRRequestsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AsyncRequestsController</servlet-name>
        <url-pattern>/xhr/*</url-pattern>
    </servlet-mapping>

